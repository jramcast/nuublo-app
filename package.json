{
  "name": "nuublo-app",
  "version": "1.0.0",
  "description": "Nuublo webapp",
  "main": "index.js",
  "scripts": {
    "start": "ts-node server/index.ts",
    "test": "jest --notify",
    "test:watch": "jest --notify --watch",
    "lint": "tslint -c tslint.json 'server/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jramcast/nuublo-app.git"
  },
  "keywords": [
    "weather",
    "machine-learning",
    "nlp",
    "twitter"
  ],
  "author": "jaime.ram@gmail.com",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jramcast/nuublo-app/issues"
  },
  "homepage": "https://github.com/jramcast/nuublo-app#readme",
  "devDependencies": {
    "@types/jest": "^21.1.0",
    "jest": "^21.1.0",
    "sinon": "^3.3.0",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "dependencies": {
    "@types/express": "^4.0.37",
    "@types/twitter": "0.0.28",
    "@types/winston": "^2.3.6",
    "express": "^4.15.4",
    "request": "^2.82.0",
    "socket.io": "^2.0.3",
    "ts-node": "^3.3.0",
    "twitter": "^1.7.1",
    "winston": "^2.3.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
